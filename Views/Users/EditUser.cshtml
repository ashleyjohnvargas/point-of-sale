@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Page Header with Go Back Icon -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Users" class="text-decoration-none me-3 text-dark" title="Go Back">
            <i class="fa-solid fa-arrow-left fs-3"></i>
        </a>
        <h2 class="mb-0 fw-bold" style="font-size: 1.8rem; color: #343a40;">Edit User</h2>
    </div>

    <form asp-action="EditUser" method="post">
        <!-- Hidden Input for User ID -->
        <input type="hidden" name="Id" value="@Model.Id" />

        <!-- Full Name Field (Read-Only) -->
        <div class="form-group mb-4">
            <label for="FullName" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Full Name</label>
            <input type="text" class="form-control form-control-lg" id="FullName" name="FullName" value="@Model.FullName" readonly>
        </div>

        <!-- Email Field -->
        <div class="form-group mb-4">
            <label for="Email" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Email</label>
            <input type="email" class="form-control form-control-lg" id="Email" name="Email" value="@Model.Email" required>
        </div>

       

        <!-- Status Dropdown -->
        <!-- Status Dropdown -->
        <div class="form-group mb-4">
            <label for="Status" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Status</label>
            <select class="form-control form-control-lg" id="Status" name="Status">
                @if (Model.IsActive)
                {
                    <option value="Active" selected>Active</option>
                    <option value="Inactive">Inactive</option>
                }
                else
                {
                    <option value="Active">Active</option>
                    <option value="Inactive" selected>Inactive</option>
                }
            </select>
        </div>


        <!-- Password Field -->
        <div class="form-group mb-4" style="position: relative;">
            <label for="Password" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Password</label>
            <input type="password" class="form-control form-control-lg" id="Password" name="Password">
            <span class="toggle-password" onclick="togglePasswordVisibility('Password', this)"
                  title="Show/Hide Password"
                  style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;">
                <i class="bx bx-hide" style="color: #555; font-size: 1.2rem;"></i>
            </span>
            <small class="form-text text-muted">Leave blank if you don't want to change the password.</small>
        </div>

        <!-- Save Changes Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5" style="border-radius: 25px; font-size: 1.1rem;">
                <i class="bx bxs-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>
