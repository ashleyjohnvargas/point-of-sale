<div class="container mt-5">
    @* <h1 class="mb-4">Add New User</h1> *@
    <!-- Page Header with Go Back Icon -->
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Users" class="text-decoration-none me-3 text-dark" title="Go Back">
            <i class="fa-solid fa-arrow-left fs-3"></i>
        </a>
        <h2 class="mb-0 fw-bold" style="font-size: 1.8rem; color: #343a40;">Add New User</h2>
    </div>

    <form asp-action="AddUser" method="post">
        <div class="form-group mb-4">
            <label for="FullName" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Full Name</label>
            <input type="text" class="form-control form-control-lg" id="FullName" name="FullName" required>
        </div>

        <div class="form-group mb-4">
            <label for="Email" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Email</label>
            <input type="email" class="form-control form-control-lg" id="Email" name="Email" required>
        </div>

        <div class="form-group mb-4">
            <label for="Status" class="fw-semibold" style="font-size: 1.1rem; color: #555;">Status</label>
            <select class="form-control form-control-lg" id="Status" name="Status">
                <option value="Active" selected>Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>

        <div class="form-group mb-4 password-container">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control form-control-lg password-input" id="Password" name="Password" required>
            <span class="toggle-password" onclick="togglePasswordVisibility('Password', this)" title="Show/Hide Password">
                <i class="bx bx-hide"></i>
            </span>
        </div>


        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg px-5" style="border-radius: 25px; font-size: 1.1rem;">
                <i class="bx bxs-save"></i> Add User
            </button>
        </div>
    </form>
</div>
